<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <div class="messages-container">  
      <% messages.forEach(function(message){ %>
        <div class="message">
          <p><%= message.user%> <span> said... </span></p>
          <p><%= message.text%> </p>
          <p><%= message.added.toDateString() %> </p>
        </div>
        <%});%>

      

    </div>

    <a href="/new">New Message</a>

  </body>
</html>
